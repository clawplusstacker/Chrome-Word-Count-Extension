{
  "manifest_version": 2,
  "name": "Word Counter",
  "description": "This extension will count the words inputted!",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["popupAPI.js"]
    }
  ],

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "background": {
    "background-page":"background.html"
  },



  "permissions": [
   "activeTab"
   ]
}
