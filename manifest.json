{
  "manifest_version": 2,
  "name": "Word Count",
  "description": "This extension will count the words inputted!",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["popupAPI.js"]
    }
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"
         },

  "browser_action": {
   "default_popup": "popup.html"
  },

  "background": {
    "background-page":"background.html"
  },



  "permissions": [
   "activeTab"
   ]
}
